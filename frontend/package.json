{
  "name": "QKD-IPSec-app",
  "version": "1.0.0",
  "description": "Electron App for QKD-IPSec Platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.myapp.app",
    "files": [
      "dist/**/*",
      "index.html",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "typescript": "^4.8.4"
  }
}

